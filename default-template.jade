                //-   a(href="javascript:void(0)" onclick="this.nextSibling.style.display = this.nextSibling.style.display == 'block' ? 'none' : 'block'") JSON
                //-   pre(style="display:none")
                //-     code=JSON.stringify(comment, null, 4)
                br

